<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/entryContainer">

    <TextView
        android:id="@+id/entryDate"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        />

    <FrameLayout android:id="@+id/picFrame"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        >

        <ImageView android:id="@+id/actionTakerPic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/actifit_logo" />

        <ImageView android:id="@+id/circle_crop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circle_crop" />

    </FrameLayout>

    <TextView
        android:id="@+id/actionTaker"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/entryDetails"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        />


    <Button
        style="@style/AppTheme.ActifitButton"
        android:id="@+id/entryDetailsBtn"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/notification_link"/>

</LinearLayout>