<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/entryContainer">

    <TextView
        android:id="@+id/entryRank"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        />

    <FrameLayout android:id="@+id/picFrame"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        >

        <ImageView android:id="@+id/userProfilePic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/actifit_logo" />

        <ImageView android:id="@+id/circle_crop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circle_crop" />

    </FrameLayout>

    <TextView
        android:id="@+id/userName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/activityCount"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        />

    <Button
        style="@style/AppTheme.ActifitButton"
        android:id="@+id/entryDetailsBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/entry_view_details_button"/>

</LinearLayout>