    <TextView
        android:id="@+id/modal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:text="@string/quick_survey"
        android:textColor="@color/actifitRed"
        android:textSize="22sp"
        android:background="@android:color/white"
        />

    <TextView
        android:id="@+id/my_caption_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:text="The Caption Title"
        android:textColor="@color/actifitRed"
        android:textSize="22sp"
        android:background="@android:color/white"
    />

    <LinearLayout style="@style/Theme.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/survey_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:text=""

            android:textSize="16sp"
            />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/survey_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!--<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView style="@style/Theme.AppCompat.Light"
            android:id="@+id/image"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_pic"
            tools:ignore="ContentDescription,MissingConstraints">

        </ImageView>



    </androidx.constraintlayout.widget.ConstraintLayout> -->

    <LinearLayout style="@style/Theme.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <Button
            style="@style/AppTheme.ActifitButton"
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:padding="16dp"
            android:text="@string/close_button" />

        <Button
            style="@style/AppTheme.ActifitButton"
            android:id="@+id/voteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:padding="16dp"
            android:text="@string/survey_vote" />

        <ProgressBar
            android:id="@+id/loader"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:progress="@integer/material_motion_duration_long_1"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>