<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.actifit.fitnesstracker.actifitfitnesstracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/actifit_launcher"
        android:label="@string/app_name"
        android:logo="@mipmap/actifit_launcher"
        android:roundIcon="@mipmap/actifit_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StepHistoryActivity"></activity>
        <activity android:name=".PostSteemitActivity"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>